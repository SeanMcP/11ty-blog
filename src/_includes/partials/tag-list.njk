<ul class="tag-list --inline-list">
    {% for tag in tags %}
        {%- if tag != "articles" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <li>
                <a href="{{ tagUrl | url }}" class="tag tag--{{ tag }}">{{ tag }}</a>
            </li>
        {%- endif -%}
    {% endfor %}
</ul>
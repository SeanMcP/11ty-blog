<header class="header">
    <div class="container header__content">
        <a class="home-link" href="{{ '/' | url }}">
            <picture>
                <source srcset="/img/seanmcp.2020.min.webp" type="image/webp">
                <source srcset="/img/seanmcp.2020.jpg" type="image/jpeg">
                <img class="home-link__image" src="/img/seanmcp.2020.jpg" alt="SeanMcP headshot" />
            </picture>
            <span class="home-link__text">Sean McP</span>
        </a>
        <nav id="desktop-nav" class="nav" aria-label="primary">
            {%- for nav in navigation -%}
                <a {% if nav.url == page.url %}aria-current="page"{% endif %} class="nav__item" href="{{ nav.url | url }}">{{ nav.label }}</a>
            {%- endfor -%}
        </nav>
        <section id="mobile-nav">
            <button aria-label="open navigation">Menu</button>
            <div id="mobile-nav__container" hidden>
                <button aria-label="close navigation">Close</button>
                <nav aria-label="primary">
                    {%- for nav in navigation -%}
                        <a {% if nav.url == page.url %}aria-current="page"{% endif %} class="mobile-nav__item" href="{{ nav.url | url }}">{{ nav.label }}</a>
                    {%- endfor -%}
                </nav>
            </div>
        <script src="/js/mobile-nav.js"></script>
    </div>
    <div id="scroll-progress"><span></span></div>
</header>
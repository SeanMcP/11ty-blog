<ul class="TagList">
    {% for tag in tags %}
        {%- if tag != "articles" -%}
            {% set tagUrl %}/tags/{{ tag }}/{% endset %}
            <li class="TagList__item">
                <a href="{{ tagUrl | url }}" class="Tag Tag--{{ tag }}">{{ tag | capitalize }}</a>
            </li>
        {%- endif -%}
    {% endfor %}
</ul>
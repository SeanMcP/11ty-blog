<ol reversed class="ArticleList">
    {% for article in articles | reverse %}
        <li class="ArticleList__item{% if article.url == url %} ArticleList__item-active{% endif %}">
            <time class="Date" datetime="{{ article.date | htmlDateString }}">{{ article.date | readableDate }}</time>
            <p class="ArticleList__heading">
                <a href="{{ article.url | url }}" class="ArticleList__link">
                    {{ article.data.title }}
                </a>
            </p>
            {% if article.data.description %}
                <p class="ArticleList__description">{{ article.data.description }}</p>
            {% endif %}
            {% set tags = article.data.tags %}
            {% include "components/TagList.njk" %}
        </li>
    {% endfor %}
</ol>
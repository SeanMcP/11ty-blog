---
layout: base
templateClass: ArticleTemplate
---

<section class="Hero Hero--article">
    <div class="ContentContainer">
        <header class="Article__header --clear-child-margins">
            <date class="Date">{{ date | readableDate }}</date>
            <h1>{{ title }}</h1>
        </header>
    </div>
</section>

<div class="ContentContainer ContentContainer--page">
    <article class="Article">
        <div class="Article__content --clear-child-margins">
            {{ content | safe }}
        </div>
        <footer class="Article__footer">
            {% set url = page.url | url | absoluteUrl(metadata.url) %}
            {% include "components/SocialShare.njk" %}
            <div class="Article__tags">
                <span class="Article__tags_title">Read more:</span>
                {% include "components/TagList.njk" %}
            </div>
        </footer>
    </article>
</div>

{% include "components/Bio.njk" %}
---
layout: base
templateClass: article
---

{% set imageUrl = image | url if image else undefined %}

<section class="hero{% if imageUrl %} hero--with-image" style="background-image: url({{ imageUrl }}), var(--hero-background){% endif %}">
    <div class="content-container">
        <header class="article__header --clear-child-margins">
            {% if "garden" in tags %}
                <span class="date">Garden</span>
            {% else %}
                <time class="date" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
            {% endif %}
            <h1 id="title">{{ title }}</h1>
        </header>
    </div>
</section>

<div class="content-container">
    <article class="article">
        <div class="article__content --clear-child-margins">
            {{ content | safe }}
        </div>
        {% if verse %}<p class="article__sdg">{{ verse }} (SDG)</p>{% endif %}
        <footer class="article__footer">
            {% set url = page.url | url | absoluteUrl(metadata.url) %}
            {% include "partials/social-share.njk" %}
            <div class="article__tags">
                <span class="article__tags_title">Read more:</span>
                {% include "partials/tag-list.njk" %}
            </div>
        </footer>
    </article>
</div>

{% include "partials/bio.njk" %}
---
layout: base
templateClass: article
---

{% set imageUrl = image | url | absoluteUrl(metadata.url) if image else undefined %}

<section class="hero hero--article{% if imageUrl %} hero--with-image" style="background-image: url({{ imageUrl }}){% endif %}">
    <div class="ContentContainer">
        <header class="article__header --clear-child-margins">
            <date class="Date">{{ date | readableDate }}</date>
            <h1>{{ title }}</h1>
        </header>
    </div>
</section>

<div class="ContentContainer">
    <article class="article">
        <div class="article__content --clear-child-margins">
            {{ content | safe }}
        </div>
        {% if verse %}<p class="article__sdg">{{ verse }} (SDG)</p>{% endif %}
        <footer class="article__footer">
            {% set url = page.url | url | absoluteUrl(metadata.url) %}
            {% include "partials/social-share.njk" %}
            <div class="article__tags">
                <span class="article__tags_title">Read more:</span>
                {% include "partials/tag-list.njk" %}
            </div>
        </footer>
    </article>
</div>

{% include "partials/bio.njk" %}
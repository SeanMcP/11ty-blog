---
layout: base
templateClass: ArticleTemplate
---

<div class="ContentContainer">
    <article class="Article">
        <header class="Article__header">
            <date>{{ date | readableDate }}</date>
            <h1>{{ title }}</h1>
        </header>
        <div class="Article__content">
            {{ content | safe }}
        </div>
        <footer class="Article__footer">
            {% set url = page.url | url | absoluteUrl(metadata.url) %}
            {% include "components/SocialShare.njk" %}
            <div class="Article__tags">
                <span class="Article__tags_title">Read more:</span>
                {% include "components/TagList.njk" %}
            </div>
        </footer>
    </article>
</div>

{% include "components/Bio.njk" %}
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ renderData.title or title or metadata.title }}</title>
        <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
        <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    </head>
    <body>
        <header id="SiteHeader">
            <div class="ContentContainer">
                <h1 class="SiteHeader__home">
                    <a href="{{ '/' | url }}">{{ metadata.title }}</a>
                </h1>
                <nav id="SiteNav">
                    {%- for nav in collections.nav | reverse -%}
                        <a class="SiteNav__item{% if nav.url == page.url %} SiteNav__item--active{% endif %}" href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a>
                    {%- endfor -%}
                </nav>
            </div>
        </header>

        <main id="SiteMain" {% if templateClass %} class="{{ templateClass }}"{% endif %}>
            {{ content | safe }}
        </main>

        <footer id="SiteFooter">
            <div class="ContentContainer">
                <div class="SiteFooter__content">
                    <div class="SiteFooter__block">
                        <h6>
                            Copyright
                        </h6>
                        <p>© Sean McPherson</p>
                    </div>
                    <div class="SiteFooter__block">
                        <h6>
                            Social
                        </h6>
                        <nav>
                            <a href="https://github.com/seanmcp">
                                <i class="fab fa-github" role="img" aria-hidden="true"></i>
                                <span>GitHub</span>
                            </a>
                            <a href="https://linkedin.com/in/seanmcp">
                                <i class="fab fa-linkedin" role="img" aria-hidden="true"></i>
                                <span>LinkedIn</span>
                            </a>
                            <a href="https://twitter.com/_seanmcp">
                                <i class="fab fa-twitter" role="img" aria-hidden="true"></i>
                                <span>Twitter</span>
                            </a>
                        </nav>
                    </div>
                    <div class="SiteFooter__block SDG">
                        <h6>
                            SDG
                        </h6>
                        <p
                            title="And whatever you do in word or deed, do all in the name of the Lord Jesus, giving thanks to God the Father through Him. — Col. 3:17 (NKJV)"
                            aria-label="And whatever you do in word or deed, do all in the name of the Lord Jesus, giving thanks to God the Father through Him. — Col. 3:17 (NKJV)"
                            tabindex="0"
                        >
                            Colossians 3:17
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <!-- Current page: {{ page.url | url }} -->
    </body>
    <script defer src="https://use.fontawesome.com/releases/v5.8.1/js/all.js" integrity="sha384-g5uSoOSBd7KkhAMlnQILrecXvzst9TdC09/VM+pjDTCM+1il8RHz5fKANTFFb+gQ" crossorigin="anonymous"></script>
</html>
<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ renderData.title or title or metadata.title }}</title>
        <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
        <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
        <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
        <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    </head>
    <body>
        <header id="SiteHeader">
            <div class="ContentContainer">
                <h1 class="SiteHeader__home">
                    <a href="{{ '/' | url }}">{{ metadata.title }}</a>
                </h1>
                <nav id="SiteNav">
                    {%- for nav in collections.nav | reverse -%}
                        <a class="SiteNav__item{% if nav.url == page.url %} SiteNav__item--active{% endif %}" href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a>
                    {%- endfor -%}
                </nav>
            </div>
        </header>

        <main id="SiteMain" {% if templateClass %} class="{{ templateClass }}"{% endif %}>
            {{ content | safe }}
        </main>

        <footer id="SiteFooter">
            <div class="ContentContainer">
                <p>Â© Sean McPherson</p>
            </div>
        </footer>

        <!-- Current page: {{ page.url | url }} -->
    </body>
</html>